{{>header}}
{{>menu pageIdCode="books"}}
<div id="vueapp">
    <p>\{{howManyBooksMessage}}</p>
    <div class="books">
        BOOKS
    </div>
</div>

<script>
    Vue.createApp({
        data() {
            return {
                howManyBooksMessage: "",
                books: []
            };
        },
        methods: {
            initialize() {
                (async () => {
                const response = await fetch('/api/books');
                this.books = await response.json();
                console.log('num of books', this.books.length)
                this.howManyBooksMessage = "inserted with Vue.js";
                })();
            },
        },
    })
        .mount("#vueapp")
        .initialize();
</script>